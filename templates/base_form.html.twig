{% use "form_div_layout.html.twig" %}

{# LES FORMULAIRES DE L'APPLICATION YUBO #}

{%- block form_row -%}
  {%- set widget_attr = {} -%}
  {% set row_attr = row_attr|merge({ class: row_attr.class|default('') ~ ' form-row' }) %}
  <div{% with {attr: row_attr} %}{{ block('attributes') }}{% endwith %}>
    {{- form_label(form) -}}
    {{- form_widget(form, widget_attr) -}}
    {{- form_errors(form) -}}
    {{- form_help(form) -}}
  </div>
{%- endblock form_row -%}



{# MESSAGE D'ERREUR LORSQUE L'UTILISATEUR N'ENTRE PAS UN BON MOT DE PASSE OU BIEN LE MOT DE PASSE N'EST PAS IDENTIQUE LORS DE L'INSCRIPTION #}

{%- block form_errors -%}
  {%- if errors|length > 0 -%}
  <ul class="form-errors">
    {%- for error in errors -%}
      <li class="message-errors">{{ error.message }}</li>
    {%- endfor -%}
  </ul>
  {%- endif -%}
{%- endblock form_errors -%}









