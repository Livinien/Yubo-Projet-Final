{% extends 'base.html.twig' %}

{% block title %}Yubo - Accueil{% endblock %}

{% block body %}


    {# CRÃ‰ER UN POST #}

    <div class="container d-flex flex-column justify-content-center align-items-center">

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}

        <div class="container-post d-flex justify-content-center">
            <a href="" class="mx-2"><img src="{{ app.user.picture }}" class="image-user rounded-circle" alt="Photo de l'utilisateur"></a>
            <div class="post-make d-flex justify-content-center flex-fill p-2 mx-1">
                <button type="button" class="btn btn-primary modal-post" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fa-solid fa-magnifying-glass glass text-purple mx-5"></i><span class="message-input-user">Quoi de neuf, {{ app.user.firstname }} ?</span></button>
            </div>


            {# MODALE POUR LA CRÃ‰ATION DE POST #}
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header mt-2">
                            <a href="" class="d-flex text-decoration-none"><img src="{{ app.user.picture }}" class="rounded-circle" alt="Photo de l'utilisateur"></a><p class="name-user fw-bold mt-3 mx-2">{{ app.user.firstname }}</p>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        {{ form_start(formCreatePost) }}
                        <div class="modal-body">
                            {{ form_rest(formCreatePost) }}

                            <button type="submit" class="btn btn-primary button-footer mt-4">Publier</button>
                        </div> 
                        

                        {{ form_end(formCreatePost) }}
                    </div>
                </div>
            </div>
        </div>
        
        {% else %}

        <a href="" data-bs-toggle="modal" data-bs-target="#exampleModal">
            <div class="container-post d-flex justify-content-center">
                <a href=""><img src="{{ asset("images/Photo_de_profil.png") }}" class="visitor-image" alt="Photo de l'utilisateur"></a>
                <div class="post-make d-flex justify-content-center flex-fill p-2 mx-1">
                    
                    <button type="button" class="btn btn-primary modal-post" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="fa-solid fa-magnifying-glass glass text-purple mx-5"></i><span class="message-input-visitor">Quoi de neuf, cher visiteur ?</span></button>
                </div>
            </div>
        </a>

        <!-- MODALE POUR LES VISITEURS ET LES UTILISATEURS NON CONNECTÃ‰S -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Il y a comme un problÃ¨me ! ðŸ˜±</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                <div class="modal-body">
                    <p class="message-visitor">Vous devez vous connecter ou vous inscrire pour pouvoir interagir avec les autres utilisateurs et crÃ©er des posts.</p>
                    <img src="{{ asset("images/Accueil_Visiteur.gif") }}" class="image-gif-visitor" alt="Gif de Jim Carrey qui tape sur le clavier">
                </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <a href="{{ path('signup') }}" class="text-decoration-none button-inscription-visitor">Inscription</a>
                        <a href="{{ path('login') }}" class="btn btn-primary button-connexion-visitor">Connexion</a>
                    </div>
                </div>
            </div>
        </div>
                
        {% endif %}


        {# AFFICHAGE DES POSTS #}

        <ul class="mt-3 w-50">
            {% for post in posts %}
                <div class="post mt-5">
                
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex">
                            <a href=""><img src="{{ app.user.picture }}" class="post-avatar rounded-circle" alt="Photo de l'utilisateur"></a>
                            <p class="name-user fw-bold m-3">{{ app.user.firstname }}</p>
                        </div>


                        <div class="btn-group">
                            <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis bullets-points fw-bold mt-2"></i>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item text-purple fw-bold" data-bs-toggle="modal" data-bs-target="#exampleModal1" href="#">Modifier</a></li>
                                <li><a class="dropdown-item text-danger fw-bold" data-bs-toggle="modal" data-bs-target="#exampleModal2{{ post.id }}" href="#">Supprimer</a></li>
                            </ul>
                        </div>
                    </div>
                    
                    
                    <!-- MODALE EDIT POST -->
                    
                    <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                           
                                <div class="modal-header">
                                    <a href="" class="d-flex text-decoration-none"><img src="{{ app.user.picture }}" class="post-avatar rounded-circle" alt="Photo de l'utilisateur"></a>
                                    <h1 class="modal-title ms-2 fs-5" id="exampleModalLabel">Modifier votre post</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                
                                {{ form_start(formEditPost) }}
                                <div class="modal-body">
                                    {{ form_rest(formEditPost) }}

                                    <button type="submit" class="btn btn-primary button-footer mt-4">Publier</button>
                                </div> 

                                {{ form_end(formEditPost) }}
                                
                            </div>
                        </div>
                    </div>
                    

                    <!-- MODALE DELETE POST -->
                    
                    <div class="modal fade" id="exampleModal2{{ post.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title text-center fs-5" id="exampleModalLabel">ÃŠtes-vous sur de vouloir supprimer votre post ?</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <img src="{{ asset("images/Delete.gif") }}" class="rounded-2 w-100" alt="Gif de suppression de Post">
                                </div>
                                <form action="{{ path('app_delete_post', { id: post.id }) }}" class="modal-footer d-flex justify-content-center">
                                    <button type="submit" class="btn btn-success fw-bold w-25">Oui</button>
                                    <button type="button" class="btn btn-danger fw-bold w-25" data-bs-dismiss="modal">Non</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    {% endif %}


                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        
                    <a href="{{ path('app_comment', { id: post.id }) }}" class="d-flex flex-column text-decoration-none" data-bs-toggle="modal" data-bs-target="#staticBackdrop{{post.id}}">
                        <div class="flex-fill d-flex flex-column mt-3">
                            <div>
                                <p class="content">{{ post.content }}</p>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mt-3">
                            <div class="rating d-flex">
                                <i class="fa-regular fa-thumbs-up icon mx-2 {{ post.rating > 0 ? 'rating-up' : '' }}"></i>
                                <p {% if post.rating > 0 %} class="rating-up ms-1" 
                                    {% elseif post.rating < 0 %} class="rating-down" 
                                    {% endif %}>
                                    {{ post.rating }}
                                </p>
                                <i class="fa-regular fa-thumbs-down icon ms-4 mx-2 {{ post.rating < 0 ? 'rating-down' : '' }}"></i>
                            </div>
                            <div class="nbrOfResponse d-flex align-item-center ms-4">
                                <i class="fa-regular fa-comment icon"></i>
                                <p class="ms-1">{{ post.nbrOfResponse }}</p>
                            </div>
                        </div>
                    </a>
                

                {% else %}

                <a href="" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    <div class="flex-fill d-flex flex-column mt-3">
                            <div>
                                <img src="{{ asset("images/Photo_de_profil.png") }}" class="visitor-image-post mb-2" alt="Photo du visiteur">
                                <span class="text-purple name-visitor fw-bold">
                                    Visiteur
                                </span> 
                                <p class="content">{{ post.content }}</p>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mt-3">
                            <div class="rating d-flex">
                                <i class="fa-regular fa-thumbs-up icon mx-2 {{ post.rating > 0 ? 'rating-up' : '' }}"></i>
                                <p {% if post.rating > 0 %} class="rating-up ms-1" 
                                    {% elseif post.rating < 0 %} class="rating-down" 
                                    {% endif %}>
                                    {{ post.rating }}
                                </p>
                                <i class="fa-regular fa-thumbs-down icon ms-4 mx-2 {{ post.rating < 0 ? 'rating-down' : '' }}"></i>
                            </div>
                            <div class="nbrOfResponse d-flex align-item-center ms-4">
                                <i class="fa-regular fa-comment icon"></i>
                                <p class="ms-1">{{ post.nbrOfResponse }}</p>
                            </div>
                        </div>
                    </a>

                    <!-- MODALE POUR LES VISITEURS ET LES UTILISATEURS NON CONNECTÃ‰S -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Il y a comme un problÃ¨me ! ðŸ˜±</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                            <div class="modal-body">
                                <p class="message-visitor">Vous devez vous connecter ou vous inscrire pour pouvoir interagir avec les autres utilisateurs et crÃ©er des posts.</p>
                                <img src="{{ asset("images/Accueil_Visiteur.gif") }}" class="image-gif-visitor" alt="Gif de Jim Carrey qui tape sur le clavier">
                            </div>
                                <div class="modal-footer d-flex justify-content-center">
                                    <a href="{{ path('signup') }}" class="btn btn-primary button-inscription-visitor">Inscription</a>
                                    <a href="{{ path('login') }}" class="btn btn-primary button-connexion-visitor">Connexion</a>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endif %}  
            </div>
                                
                {# <a href="{{ path('app_comment', { id: post.id }) }}" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                
                </a> #}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                <!-- MODALE DETAILS POST -->
                <div class="modal fade" id="staticBackdrop{{ post.id }}" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header mt-2">
                                <a href="" class="d-flex text-decoration-none"><img src="{{ app.user.picture }}" class="post-avatar rounded-circle" alt="Photo de l'utilisateur"></a><p class="name-user fw-bold mt-3 mx-2">{{ app.user.firstname }}</p>
                            
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                            <div class="modal-body">
                                <div class="flex-fill d-flex flex-column mt-3">
                                <div>
                                    <p class="content">{{ post.content }}</p>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center mt-3">
                                <div class="rating d-flex">
                                    <i class="fa-regular fa-thumbs-up icon mx-2 {{ post.rating > 0 ? 'rating-up' : '' }}"></i>
                                    <p {% if post.rating > 0 %} class="rating-up ms-1" 
                                        {% elseif post.rating < 0 %} class="rating-down" 
                                        {% endif %}>
                                        {{ post.rating }}
                                    </p>
                                    <i class="fa-regular fa-thumbs-down icon ms-4 mx-2 {{ post.rating < 0 ? 'rating-down' : '' }}"></i>
                                    {# <p {% if post.rating > 0 %} class="rating-up ms-1" 
                                        {% elseif post.rating < 0 %} class="rating-down" 
                                        {% endif %}>
                                        {{ post.rating }}
                                    </p> #}
                                </div>
                                <div class="nbrOfResponse d-flex align-item-center ms-4">
                                    <i class="fa-regular fa-comment icon"></i>
                                    <p class="ms-1">{{ post.nbrOfResponse }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="comment ">
                        <h3 class="color-purple text-center mt-2">Commentaire</h3>
                        <div class="comment-form p-3">
                            {# {{ form_start(commentForm) }} #}
                            {# {{ form_rest(commentForm) }} #}
                            <button type="submit" class="btn btn-primary d-flex justify-content-center button-footer mt-5">Envoyer</button>
                            {# {{ form_end(commentForm) }} #}
                        </div> 
                    </div>
                </div>
            </div>
            {% endif %}  
            
            {% endfor %}
        </ul>
    </div>


