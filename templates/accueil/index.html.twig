{% extends 'base.html.twig' %}

{% block title %}Yubo - Accueil{% endblock %}

{% block body %}


    {# CRÉER UN POST #}

    <div class="container d-flex flex-column justify-content-center align-items-center">
    
        <div class="container-post d-flex justify-content-center">
            <a href=""><img src="{{ asset("images/Photo_de_profil.png") }}" class="d-flex align-item-center" alt="Photo de l'utilisateur"></a>
            <div class="post-make d-flex justify-content-center flex-fill p-2 mx-1">
                <button type="button" class="btn btn-primary modal-post" data-bs-toggle="modal" data-bs-target="#exampleModal"><span>Rechercher votre post . . .</span></button>
            </div>


            {# MODALE POUR LA CRÉATION DE POST #}
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header mt-2">
                            <a href="" class="d-flex text-decoration-none"><img src="{{ asset("images/Photo_de_profil.png") }}" alt="Photo de l'utilisateur"></a><p class="name-user fw-bold mt-3">Flavien</p>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        {{ form_start(form) }}
                        <div class="modal-body">
                            {{ form_rest(form) }}

                            <button type="submit" class="btn btn-primary button-footer mt-4">Publier</button>
                        </div> 
                        

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>



        {# AFFICHAGE DES POSTS #}

        <ul class="mt-3 w-50">
            {% for post in posts %}
                <a href="{{ path('app_comment', { id: post.id }) }}" class="post d-flex flex-column text-decoration-none mt-5">
                    <div class="d-flex align-item-between">
                        <div class="d-flex justify-content-center">
                            <img src="{{ post.author.avatar }}" class="post-avatar rounded-circle" alt="Photo de l'utilisateur">
                            <p class="name-user fw-bold m-3">{{ post.author.name }}</p>
                        </div>
                    </div>
                    <div class="flex-fill d-flex flex-column mt-3">
                        <div>
                            <p class="content">{{ post.content }}</p>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <div class="rating d-flex">
                            <i class="fa-regular fa-thumbs-up icon mx-2 {{ post.rating > 0 ? 'rating-up' : '' }}"></i>
                            <p {% if post.rating > 0 %} class="rating-up ms-1" 
                                {% elseif post.rating < 0 %} class="rating-down" 
                                {% endif %}>
                                {{ post.rating }}
                            </p>
                            <i class="fa-regular fa-thumbs-down icon ms-4 mx-2 {{ post.rating < 0 ? 'rating-down' : '' }}"></i>
                            {# <p {% if post.rating > 0 %} class="rating-up ms-1" 
                                {% elseif post.rating < 0 %} class="rating-down" 
                                {% endif %}>
                                {{ post.rating }}
                            </p> #}
                        </div>
                        <div class="nbrOfResponse d-flex align-item-center ms-4">
                            <i class="fa-regular fa-comment icon"></i>
                            <p class="ms-1">{{ post.nbrOfResponse }}</p>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
