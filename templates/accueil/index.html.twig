        <div class="loaderFinal">
            <div class="anim-loader">
                <img src="{{ asset("images/Yubo_Logo.png") }}" class="title-loader" alt="Logo Yubo">
                <div class="points-container d-flex mt-5">
                    <div class="point1"></div>
                    <div class="point1"></div>
                    <div class="point1"></div>
                </div>
            </div>
        </div>
{% endblock %}
